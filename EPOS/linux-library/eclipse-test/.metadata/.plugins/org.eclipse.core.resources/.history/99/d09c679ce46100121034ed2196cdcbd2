#include "Definitions.h"
#include <iostream>
using namespace std;

#define PI 3.14159

void printError(ErrorCode) {
	VCS_GetErrorInfo(ErrorCode, ErrorInfo, 100);
}

int main() {

	char DeviceName[] = "EPOS2";
	char ProtocolStackName[] = "EPOS2_USB"; // "CANopen"
	char InterfaceName[] = "USB";
	char PortName[] = "USB5";
	char ErrorInfo[100];

	unsigned long ErrorCode;
	void* device;

	device = VCS_OpenDevice(DeviceName, ProtocolStackName, InterfaceName, PortName, &ErrorCode);


	cout << "Attempting connection to " << DeviceName;
	cout << " at " << PortName << "..." << endl;

	cout << "ErrorCode" << ": " << ErrorCode << endl;
	cout << "device" << ": " << device << endl;
	cout << "Error Info" << ": " << ErrorInfo << endl;
	return 0;
}

