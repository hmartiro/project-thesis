#include "Definitions.h"
#include <iostream>
using namespace std;

#define PI 3.14159

void check(char* name, char* value) {

	cout << name << ": " << value << endl;
}

int main() {

	char DeviceName[] = "EPOS2";
	char ProtocolStackName[] = "EPOS2_USB"; // "CANopen"
	char InterfaceName[] = "USB";
	char PortName[] = "USB0";

	unsigned long ErrorCode;
	void* device;

	device = VCS_OpenDevice(DeviceName, ProtocolStackName, InterfaceName, PortName, &ErrorCode);

	check("DeviceName", DeviceName);
	check("ErrorCode", ErrorCode);
	check("device", device);

	return 0;
}


